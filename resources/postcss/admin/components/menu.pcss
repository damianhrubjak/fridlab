.nav-link-item {
    @apply mt-2 flex items-center justify-start  py-4 px-4 text-xl font-bold text-white transition-all duration-300;
    span {
        @apply block w-12;
    }
    span:nth-child(1) {
        @apply text-xl;
    }
    span:nth-child(2) {
        @apply w-max;
    }

    background: linear-gradient(
        45deg,
        #201e24 0% 50%,
        var(--pallette-yellow) 50% 100%
    );
    background-size: 200%;
    background-position: 0%;
    &:hover {
        @apply text-black;
        background-position: 100%;
    }

    &.admin-active {
        @apply text-black;
        background-position: 100%;
    }
}
